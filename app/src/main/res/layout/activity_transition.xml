<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
<data>
    <variable
        name="click"
        type="com.phz.dev.feature.practice.animation.transition.TransitionActivity.ClickProxy" />
</data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_view_hw"
            android:background="@color/colorYellow50"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="0dp"
            android:layout_height="@dimen/normal_view_hw"
            android:background="@color/colorBlue20"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll1" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll2"
            app:srcCompat="@drawable/ic_genshin_fxe" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/materialButton6"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/normal_view_hw"
            android:layout_marginBottom="24dp"
            android:text="ll1"
            android:onClick="@{()->click.startLL1Animation()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/materialButton8"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/materialButton8"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/normal_view_hw"
            android:layout_marginBottom="24dp"
            android:text="ll2"
            android:onClick="@{()->click.startLL2Animation()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/materialButton7"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/materialButton6" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/materialButton7"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/normal_view_hw"
            android:layout_marginBottom="24dp"
            android:text="iv"
            android:onClick="@{()->click.startIvAnimation()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/materialButton8" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>